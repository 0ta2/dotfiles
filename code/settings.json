{
  //----------------------------------------------------------
  // vscodeのeditorの設定
  //----------------------------------------------------------
  // 自動保存を有効
  // タブやウィンドウからフォーカスを外れると保存される
  "files.autoSave": "onWindowChange",
  // フォントを指定
  "editor.fontFamily": "Cica",
  // フォントサイズ
  "editor.fontSize": 14,
  // エディターで空白文字を表示する方法を制御する｡
  "editor.renderWhitespace": "boundary",
  // tabのサイズを指定
  "editor.tabSize": 2,
  // ファイルの最後を改行で終わらせる
  "files.insertFinalNewline": true,
  // 文字コードの自動錦
  "files.autoGuessEncoding": true,
  // 常に新しいタブで開く
  "workbench.editor.enablePreview": false,
  // テーマの設定
  "workbench.colorTheme": "Gruvbox Dark (Medium)",
  // アイコンのテーマを指定
  "workbench.iconTheme": "material-icon-theme",
  //----------------------------------------------------------
  // vscodeの検索系
  //----------------------------------------------------------
  // 検索除外対象のディレクトリ
  "search.exclude": {
    "**/bower_components": true,
    "**/vendor": true,
    "**/env": true,
    "tags": true,
    "**/.svn": true,
    "**/.git": true,
    "**/.DS_Store": true
  },
  //----------------------------------------------------------
  // vscode vimの設定
  //----------------------------------------------------------
  // system とクリップボードを共有する
  "vim.useSystemClipboard": true,
  // ハイライトを有効にする
  "vim.hlsearch": true,
  // easymotion を有効にする
  "vim.easymotion": true,
  // Vim のキーバインドを有効にする
  "vim.useCtrlKeys": true,
  // * or # でカーソルは以下の文字列を検索する
  "vim.visualstar": true,
  "vim.whichwrap": "h,l,<,>,[,]",
  //----------------------------------------------------------
  // vscode の key 設定
  //----------------------------------------------------------
  // leader の設定
  "vim.leader": "<space>",
  // normalモードのkeybindを書き換える
  "vim.normalModeKeyBindings": [
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["ctrl+l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["ctrl+h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["ctrl+j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["ctrl+k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.focusSideBar"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      // highlightを解除
      "before": ["<Esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      // 実装箇所に移動
      "before": ["<leader>", "u"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["<leader>", "u"],
      "commands": ["editor.action.goToDeclaration"]
    },
    // 参照へ移動
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    }
  ],
  // visualモードのkeybindを書き換える
  "vim.visualModeKeyBindings": [
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    }
  ],
  // インサートモードの設定
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  //----------------------------------------------------------
  // Terminal の設定
  //----------------------------------------------------------
  // デフォルトシェルを指定
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  // テーミナルを iTerm に変更
  "terminal.external.osxExec": "iTerm.app",
  //  ターミナルのフォントを指定
  "terminal.integrated.fontFamily": "Cica",
  // ターミナルのフォントサイズ
  "terminal.integrated.fontSize": 14,
  //----------------------------------------------------------
  // Git 設定
  //----------------------------------------------------------
  // 定期的に fetch を実行する
  "git.autofetch": true,
  "terminal.integrated.scrollback": 100000,
  "editor.minimap.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  // Gitリポジトリと動悸する前に確認させない
  "git.confirmSync": false,
  //----------------------------------------------------------
  // PHP 設定
  //----------------------------------------------------------
  "php.validate.enable": false,
  "php.suggest.basic": false,
  "blade.format.enable": true,
  //----------------------------------------------------------
  // Todoツリーの設定
  //----------------------------------------------------------
  // Todo Tree のツリービューのヘッダーにボタンを表示して、現在のファイル、開いているファイル、またはワークスペース全体のスキャンを切り替える
  "todo-tree.tree.showScanModeButton": false
}
