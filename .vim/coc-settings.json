{
  //------------------
  // list
  //------------------
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  //------------------
  // explorer
  //------------------
  // explorerの表示方法
  "explorer.position": "left",
  // 隠しファイルを表示
  "explorer.file.showHiddenFiles": true,
  // ホバーした際の情報を非表示
  "explorer.previewAction.onHover": false,
  // 表示するソース情報
  "explorer.sources": [
    {
      "name": "bookmark",
      "expand": false
    },
    {
      "name": "buffer",
      "expand": false
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  //------------------
  // coc-yaml
  //------------------
  "yaml.schemas": {
    "https://json.schemastore.org/ansible-role-2.9": [
      "**/roles/*.yml",
      "**/defaults/**/*.yml",
      "**/group_vars/**/*",
      "**/host_vars/**/*",
      "**/vars/**/*.yml",
      "**/tasks/**/*.yml",
      "**/handlers/*.yml",
      "**/meta/*.yml",
      "**/roles/**/*.yml",
      "**/playbooks/**/*.yml",
      "**/ansible/**/hosts"
    ],
    "https://json.schemastore.org/ansible-inventory": "**/ansible/**/inventory",
    "https://json.schemastore.org/composer": "composer.yml",
    "https://json.schemastore.org/github-action": ".github/workflows/*.yml"
  },
  //------------------
  // snippets
  //------------------
  "snippets.enableStatusItem": true,
  //------------------
  // coc-lists
  //------------------
  "list.source.files.args": ["--hidden", "--files"],
  //------------------
