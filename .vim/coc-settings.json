    "nodenv",
    "osyo",
    "phpls",
    "pyenv",
    "rbenv",
    "reireias",
    "sbin",
    "sheerun",
    "simeji",
    "systemctl",
    "terryma",
    "tpope",
    "winresizer",
    "yapf"
  ]
}
