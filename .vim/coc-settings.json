{
  // coc
  "coc.preferences.jumpCommand": "drop",
  // Lua
  "Lua.diagnostics.globals": [
    "vim"
  ],
  // coc-lists
  "list.source.files.args": [
    "--hidden",
    "--files"
  ],
  // coc-snippet
  "snippets.extends": {
    "typescript": [
      "javascript"
    ]
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "go"
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/composer": [
      "composer.yml"
    ],
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml"
    ]
  },
  // coc-go
  "go.enable": false,
  // Language Server
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		}
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "sh": "shellcheck",
    "php": ["phpstan", "psalm"],
    "yaml": [ "yamllint" ],
    "cmake": [ "cmake-lint", "cmakelint" ]
  }
}
