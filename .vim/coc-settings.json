"languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
"yaml.schemas": {
  "http://json.schemastore.org/composer": "/*",
  "http://json.schemastore.org/ansible-stable-2.5": "/*"
  },
  "coc.preferences.formatOnSaveFiletypes": ["css", "Markdown", "PHP"]
}
