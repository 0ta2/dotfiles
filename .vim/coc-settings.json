{
  //------------------
  // explorer
  //------------------
  // explorerの表示方法
  "explorer.position": "left",
  // 隠しファイルを表示
  "explorer.file.showHiddenFiles": true,
  // ホバーした際の情報を非表示
  "explorer.previewAction.onHover": false,
  // 表示するソース情報
  "explorer.sources":
  [
    {
      "name": "bookmark",
      "expand": false
    },
    {
      "name": "buffer",
      "expand": false
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  //------------------
  // oc-phpls
  //------------------
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/.svn/**",
    "**/.hg/**",
    "**/CVS/**",
    "**/.DS_Store/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**/{Test,test,Tests,tests}/**"
  ],
  //------------------
  // coc-yaml
  //------------------
  "yaml.schemas": {
    "https://json.schemastore.org/ansible-stable-2.9": "/*.yml"
  },
  //------------------
  // snippets
  //------------------
  "snippets.convertToSnippetsAction": false,
  //------------------
  // coc-lists
  //------------------
  "list.source.files.args":
  [
    "--hidden", "--files"
  ],
  "cSpell.userWords": [
    "Cica",
    "DISTRO",
    "Hzja",
    "ajmwagar",
    "ansible",
    "anzu",
    "centos",
    "cheetsheet",
    "christoomey",
    "dotfiles",
    "eisu",
    "eoan",
    "gopls",
    "gotos",
    "gruvbox",
    "junegunn",
    "liuchengxu",
    "markonm",
    "mdwn",
    "mkdn",
    "morhetz",
    "neoclide",
    "neovim",
    "nodenv",
    "osyo",
    "phpcbf",
    "phpcs",
    "phpls",
    "pyenv",
    "rbenv",
    "reireias",
    "sbin",
    "sheerun",
    "simeji",
    "sjis",
    "systemctl",
    "terryma",
    "tpope",
    "winresizer",
    "yapf",
    "zyiw"
  ]
}
