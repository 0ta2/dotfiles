{
  //------------------
  // explorer
  //------------------
  // explorerの表示方法
  "explorer.position": "left",
  // 隠しファイルを表示
  "explorer.file.showHiddenFiles": true,
  // 表示するソース情報
  "explorer.sources":
  [
    {
      "name": "bookmark",
      "expand": false
    },
    {
      "name": "buffer",
      "expand": false
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  //------------------
  // snippets
  //------------------
  "snippets.convertToSnippetsAction": false,
  //------------------
  // coc-lists
  //------------------
  "list.source.files.args":
  [
    "--hidden", "--files"
  ],
  "cSpell.userWords": [
    "dotfiles",
    "gopls",
    "gotos",
    "neoclide",
    "neovim",
    "nodenv",
    "phpls",
    "pyenv",
    "rbenv",
    "reireias",
    "yapf"
  ]
}
