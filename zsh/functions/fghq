function fghq() {
  local selected_dir=$(ghq list | fzf --query="$LBUFFER")

  if [ -n "$selected_dir" ]; then
    tmux rename-window $(basename $selected_dir | sed 's/.\+/\U\0/')
    BUFFER="cd $(ghq root)/${selected_dir}"
    zle accept-line
  fi

  zle reset-prompt
}

zle -N fghq
bindkey "^]" fghq
